{
    "root": true,
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:prettier/recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "printWidth": 120,
                "trailingComma": "none"
            }
        ],
        "quotes": [
            1,
            "single"
        ],
        "no-unused-vars": [
            0
        ],
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-statements": [
            1,
            20
        ],
        "max-depth": [
            1,
            4
        ],
        "complexity": [
            1,
            10
        ],
        "no-console": 1,
        "semi": 2,
        "no-empty": 1
    }
}